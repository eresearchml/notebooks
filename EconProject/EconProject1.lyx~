\end_layout

\begin_layout Standard
gen graph (heterogeneity across acountrie)
\end_layout

\begin_layout Standard
bysort country: egen y_mean=mean(y) twoway scatter y country, msymbol(circle_hol
low) || connected y_mean country, msymbol(diamond) || , xlabel(1 "A" 2 "B"
 3 "C" 4 "D" 5 "E" 6 "F" 7 "G")
\end_layout

